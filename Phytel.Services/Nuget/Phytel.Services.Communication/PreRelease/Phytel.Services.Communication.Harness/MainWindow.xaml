                                <Label Margin="0,4,0,4" Grid.Row="8" Grid.Column="0" Content="Owner Code:"/>
                                <TextBox Text="{Binding FacilityDisplayName.OwnerCode}" Grid.Row="8" Grid.Column="1" Margin="0,4,4,4" />
                                <Label Margin="0,4,0,4" Grid.Row="9" Grid.Column="0" Content="Narrative:"/>
                                <TextBox Text="{Binding FacilityDisplayName.Narrative}" Grid.Row="9" Grid.Column="1" Margin="0,4,4,4" />
                                <!-- Facility Display Name - end-->

                                <!-- Facility Name - begin-->
                                <Border Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2" Background="BlanchedAlmond" CornerRadius="3" Margin="4">
                                    <Label VerticalAlignment="Center" HorizontalAlignment="Center">Facility Name</Label>
